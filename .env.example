# =============================================================================
# SIP BREWERY BACKEND - SECURE ENVIRONMENT CONFIGURATION
# =============================================================================
# CRITICAL: Never commit actual values to version control!
# Copy this file to .env and replace with actual values

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# MongoDB connection string - REQUIRED
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
# Optional: Separate test database
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/test_database?retryWrites=true&w=majority

# PostgreSQL (if used)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sip_brewery
DB_TEST_NAME=sip_brewery_test
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# =============================================================================
# JWT Secret - MUST be a strong, random string (minimum 64 characters)
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_64_characters_long_random_string

# API Keys for external services (comma-separated if multiple)
VALID_API_KEYS=api_key_1,api_key_2,api_key_3

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=false

# üõ∞Ô∏è NASA EARTHDATA CREDENTIALS
EARTHDATA_USERNAME=equisculpt
EARTHDATA_TOKEN=your_nasa_earthdata_token_here

# Redis for different environments
REDIS_TEST_HOST=localhost
REDIS_TEST_PORT=6379
REDIS_TEST_PASSWORD=your_redis_test_password

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# Query performance monitoring
SLOW_QUERY_THRESHOLD=1000

# Connection pool settings
MONGO_MAX_POOL_SIZE=50
MONGO_MIN_POOL_SIZE=10

# Cache TTL settings (seconds)
CACHE_MARKET_DATA_TTL=60
CACHE_FUND_PRICES_TTL=300
CACHE_USER_PROFILE_TTL=1800

# Compression settings
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV=development
# Server port
PORT=5000

# =============================================================================
# EXTERNAL API KEYS
# ===================================================================# ===== CUSTOM FINANCIAL SEARCH ENGINE =====
# Your custom financial search engine URL (default: http://localhost:3000)
CUSTOM_FINANCIAL_SEARCH_URL=http://localhost:3000

# Enable/disable search engines
ENABLE_CUSTOM_FINANCIAL_SEARCH=true
ENABLE_DUCKDUCKGO_BACKUP=true  # (Optional: US/global macro data)

# AI/ML Services
PYTHON_SERVICE_URL=http://localhost:5001
OPENAI_API_KEY=your_openai_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Communication Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Services
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX=10

# Request size limits
MAX_REQUEST_SIZE=10mb
MAX_FILE_SIZE=50mb

# IP Whitelist (comma-separated, leave empty to disable)
IP_WHITELIST=

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info
# Log file path
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis configuration (if used)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 (if used)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================
# Test configuration
TEST_TIMEOUT=30000
TEST_DB_NAME=sip_brewery_test

# Debug flags
DEBUG_MODE=false
VERBOSE_LOGGING=false
