# ðŸš€ SIP BREWERY BACKEND - PRODUCTION ENVIRONMENT
# Complete production configuration with all required variables

# ===== CORE APPLICATION =====
NODE_ENV=production
PORT=3000
APP_NAME=SIP Brewery Backend
APP_VERSION=3.0.0

# ===== DATABASE CONFIGURATION =====
MONGODB_URI=mongodb://admin:sipbrewery2024!@mongo:27017/sipbrewery?authSource=admin
MONGODB_MAX_POOL_SIZE=50
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://:sipbrewery2024!@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=sipbrewery2024!
REDIS_TLS=false

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=sipbrewery_super_secure_jwt_secret_key_for_production_2024_minimum_64_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=sipbrewery_encryption_key_32_chars
HMAC_SECRET=sipbrewery_hmac_secret_for_production

# ===== API SECURITY =====
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT_MAX=10
UPLOAD_RATE_LIMIT_MAX=20

# ===== CORS CONFIGURATION =====
CORS_ORIGIN=https://sipbrewery.com,https://app.sipbrewery.com
ALLOWED_ORIGINS=https://sipbrewery.com,https://app.sipbrewery.com,https://admin.sipbrewery.com

# ===== EXTERNAL API KEYS =====
NSE_API_KEY=your_nse_api_key_here
BSE_API_KEY=your_bse_api_key_here
SEBI_API_KEY=your_sebi_api_key_here
AMFI_API_KEY=your_amfi_api_key_here

# ===== UNIFIED ASI CONFIGURATION =====
PYTHON_ASI_PORT=8001
ASI_TARGET_RATING=9.2
ASI_RESPONSE_TIME_TARGET=500
ASI_ACCURACY_TARGET=0.85
ASI_ENABLE_QUANTUM_OPTIMIZATION=true
ASI_ENABLE_SATELLITE_DATA=true
ASI_ENABLE_ALTERNATIVE_DATA=true

# ===== FINANCIAL DATA SOURCES =====
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
QUANDL_API_KEY=your_quandl_api_key

# ===== SATELLITE INTELLIGENCE =====
EARTHDATA_USERNAME=your_nasa_username
EARTHDATA_TOKEN=your_nasa_earthdata_token
ESA_API_KEY=your_esa_api_key
NOAA_API_KEY=your_noaa_api_key

# ===== MONITORING & LOGGING =====
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_SECURITY_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ===== FILE UPLOAD SECURITY =====
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/app/uploads
ENABLE_VIRUS_SCANNING=true

# ===== SESSION SECURITY =====
SESSION_SECRET=sipbrewery_session_secret_for_production_2024
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict
SESSION_MAX_AGE=86400000

# ===== EMAIL CONFIGURATION =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@sipbrewery.com
SMTP_PASS=your_email_password

# ===== NOTIFICATION SERVICES =====
WHATSAPP_API_KEY=your_whatsapp_business_api_key
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
SLACK_WEBHOOK_URL=your_slack_webhook_url

# ===== PAYMENT GATEWAYS =====
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# ===== COMPLIANCE & REGULATORY =====
SEBI_COMPLIANCE_MODE=strict
AMFI_COMPLIANCE_MODE=strict
ENABLE_AUDIT_LOGGING=true
ENABLE_TRANSACTION_MONITORING=true
ENABLE_RISK_MONITORING=true

# ===== PERFORMANCE OPTIMIZATION =====
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300
ENABLE_CLUSTERING=true
CLUSTER_WORKERS=4

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=sipbrewery-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
READY_CHECK_ENABLED=true

# ===== FEATURE FLAGS =====
ENABLE_ASI_SYSTEM=true
ENABLE_REAL_TIME_DATA=true
ENABLE_SATELLITE_INTELLIGENCE=true
ENABLE_SOCIAL_TRADING=true
ENABLE_QUANTUM_OPTIMIZATION=true
ENABLE_ESG_INTEGRATION=true
ENABLE_BEHAVIORAL_FINANCE=true

# ===== DEVELOPMENT OVERRIDES =====
ENABLE_DEBUG_LOGS=false
ENABLE_MOCK_DATA=false
ENABLE_TEST_ENDPOINTS=false
