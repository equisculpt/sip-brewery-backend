# üîê SIP Brewery Authentication Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sipbrewery
DATABASE_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-different-from-jwt-secret

# SMS Provider Configuration (Choose one)
SMS_PROVIDER=MSG91
# SMS_PROVIDER=TWILIO
# SMS_PROVIDER=TEXTLOCAL

# MSG91 Configuration (Indian SMS Provider - Recommended)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_TEMPLATE_ID=your-msg91-template-id
MSG91_SENDER_ID=SIPBRY

# Twilio Configuration (Alternative)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# TextLocal Configuration (Alternative)
TEXTLOCAL_API_KEY=your-textlocal-api-key
TEXTLOCAL_SENDER=SIPBRY

# Email Configuration (Optional)
EMAIL_PROVIDER=SENDGRID
# EMAIL_PROVIDER=SMTP

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@sipbrewery.com
SENDGRID_FROM_NAME=SIP Brewery

# SMTP Configuration (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Configuration
NODE_ENV=development
PORT=3001
APP_NAME=SIP Brewery
APP_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# BSE Integration (for future use)
BSE_USER_ID=your-bse-user-id
BSE_PASSWORD=your-bse-password
BSE_MEMBER_ID=your-bse-member-id
BSE_PASSKEY=your-bse-passkey

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-verification

# Development/Testing
DEBUG=true
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/sipbrewery_test
