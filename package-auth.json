{
  "name": "sip-brewery-auth",
  "version": "1.0.0",
  "description": "Enterprise-grade authentication system for SIP Brewery",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^6.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "axios": "^1.5.0",
    "crypto": "^1.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "useragent": "^2.3.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "twilio": "^4.15.0",
    "nodemailer": "^6.9.4",
    "@sendgrid/mail": "^7.7.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "@types/jest": "^29.5.4",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "authentication",
    "jwt",
    "otp",
    "2fa",
    "security",
    "fintech",
    "mutual-funds",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "SIP Brewery Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sipbrewery/backend.git"
  },
  "bugs": {
    "url": "https://github.com/sipbrewery/backend/issues"
  },
  "homepage": "https://sipbrewery.com",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
